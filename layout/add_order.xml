<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Add Order"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:background="#186865"
        android:textColor="#e3f5ff"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_green"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Shop Name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"
                android:padding="10dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Brand"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/BName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_drop_down"
                android:dropDownWidth="250dp">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Model"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/MName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_drop_down"
                android:dropDownWidth="250dp">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Cost Price"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/costPrice"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_calc"
                    android:padding="10dp"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/searchBTN"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:padding="0dp"
                    android:background="@drawable/btn_calc"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="Search"
                    android:textSize="17sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Unit Price"
                android:textSize="20sp" />

            <EditText

                android:id="@+id/Price"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"
                android:padding="10dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Quantity"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Qty"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"
                android:padding="10dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Total"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Total"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_calc"
                    android:padding="10dp"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/calcBTN"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:padding="0dp"
                    android:background="@drawable/btn_calc"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="Sum"
                    android:textSize="17sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Date"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/orderDate"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"
                android:padding="10dp"
                android:textColor="#000000" >
            </EditText>
        </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    >

    <Button
        android:id="@+id/addBTN"
        android:layout_width="133dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Add"
        android:textSize="20sp"
        android:layout_marginRight="25dp"
        android:layout_gravity="left"
        />

    <Button
        android:id="@+id/cancelBTN"
        android:layout_width="133dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Cancel"
        android:textSize="20sp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="right"/>
</LinearLayout>

</LinearLayout>

    </ScrollView>
</LinearLayout>